        xmlns:iconpacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:HeritageApp.Views"
        mc:Ignorable="d"
       >
    
    <Grid>
       
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="Beige" Margin="5">
                <ComboBox Margin="5"></ComboBox>
                <ComboBox Margin="5"></ComboBox>
                <ComboBox Margin="5"></ComboBox>
                <Button Content="검색" Style="{StaticResource MahApps.Styles.Button.MetroSquare.Accent}" Margin="5" Height="40" ></Button>
            </StackPanel>
            <TextBox Grid.Row="1" Text="부산시 영도구 검색결과" Margin="5" FontSize="20"></TextBox>
            <DataGrid>
                
            </DataGrid>
       
    </Grid>
</UserControl>

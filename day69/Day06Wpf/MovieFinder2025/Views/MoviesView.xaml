<mah:MetroWindow x:Class="MovieFinder2025.Views.MoviesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconpacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:Dialog ="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:MovieFinder2025.Views"
        mc:Ignorable="d"
        Title="MoviesView" Height="580" Width="1000"
        Dialog:DialogParticipation.Register="{Binding}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FocusManager.FocusedElement="{Binding ElementName=TxtSearchMovie}">
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconpacks:PackIconVaadinIcons Kind="Film" Margin="10,7,0,0" Background="White"/>
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <!--검색 영역-->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TxtSearchMovie" Grid.Column="0" Margin="5,10" FontSize="14"
                     InputMethod.PreferredImeState="On"
                     InputMethod.PreferredImeConversionMode="Native"
                     mah:TextBoxHelper.Watermark="검색할 영화이름 입력"
                     mah:TextBoxHelper.AutoWatermark="True"
                     mah:TextBoxHelper.UseFloatingWatermark="True"
                     mah:TextBoxHelper.ClearTextButton="True"
                     Text="{Binding MovieName , UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding SearchMovieCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            
            <Button Grid.Column="1" Margin="5,10" FontSize="14" Content="검색" 
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding SearchMovieCommand}"
             >
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconpacks:PackIconModern Kind="Magnify" Margin="5,5,15,5" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>
        
        <!--검색 결과 영역-->
        <DataGrid Grid.Row="1" Grid.Column="0" Margin="5" IsReadOnly="True"  AutoGenerateColumns="False"
                  ItemsSource="{Binding MovieItems}"
                  SelectedItem="{Binding SelectedMovieItem, Mode=TwoWay}"
                  Style="{StaticResource MahApps.Styles.DataGrid.Azure}"
                  SelectionMode="Single"
                  SelectionUnit ="FullRow">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command ="{Binding MovieItemDoubleClickCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <DataGrid.Columns>
                <DataGridTextColumn Header="아이디" FontWeight="Bold" Binding="{Binding Id}">
                    <!--숫자 오른쪽 정렬-->
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="한글제목" FontWeight="Bold" Binding="{Binding Title}"></DataGridTextColumn>
                <DataGridTextColumn Header="영어제목" Binding="{Binding Original_title}"></DataGridTextColumn>
                <DataGridTextColumn Header="개봉일" Binding="{Binding Release_date, StringFormat='yyyy-MM-dd'}"></DataGridTextColumn>
                <DataGridTextColumn Header="인기도" Binding="{Binding Popularity , StringFormat=F2}">
                    <!--숫자 오른쪽 정렬-->
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="평점" Binding="{Binding Vote_average , StringFormat=F2}">
                    <!--숫자 오른쪽 정렬-->
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/> 
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>

        <!--포스터 영역-->
        <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
            <GroupBox Header="포스터" Margin="10"
                      mah:HeaderedControlHelper.HeaderFontSize="14"
                      mah:HeaderedControlHelper.HeaderFontWeight="Bold"
                      mah:HeaderedControlHelper.HeaderHorizontalContentAlignment="Center">
                <Image Margin="10" Source="{Binding PosterUri}" Stretch="Fill" />
            </GroupBox>
        </Grid>
        
        <!--버튼 영역-->
        <StackPanel Grid.Row="2" Grid.Column="0"  Orientation="Horizontal">
            <Button Content="즐겨찾기 추가" Margin="5" FontSize="12" 
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Padding="15,5"
                    Command="{Binding AddMovieInfoCommand}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconpacks:PackIconMaterial Kind="PlaylistPlus" Margin="5,5,10,5" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="즐겨찾기 보기" Margin="5" FontSize="12" 
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Padding="15,5"
                    Command="{Binding ViewMovieInfoCommand}">        
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconpacks:PackIconMaterial Kind="PlaylistStar" Margin="5,5,10,5" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="즐겨찾기 삭제" Margin="5" FontSize="12" 
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Padding="15,5"
                    Command="{Binding DelMovieInfoCommand}">    
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconpacks:PackIconMaterial Kind="PlaylistRemove" Margin="5,5,10,5" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="예고편 보기" Margin="5" FontSize="12" 
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Padding="23,5" Background="Red"
                    Command="{Binding ViewMovieTrailerCommand}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconpacks:PackIconSimpleIcons Kind="Youtube" Margin="5,5,10,5" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
           
        </StackPanel>
        <!--상태바 영역-->
        <StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" >
            <StatusBarItem Content="TMDB &amp; Youtube API App"  Margin="10,0"/>
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}"/>
            <StatusBarItem Content="{Binding SearchResult}"/>
            <StatusBarItem Content="{Binding CurrDateTime}" HorizontalAlignment="Right" Margin="0,0,10,0" />
        </StatusBar>
    </Grid>
    
  
</mah:MetroWindow>
